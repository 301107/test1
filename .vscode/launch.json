{
    "version": "0.2.0",
    "configurations": [
        {
            // Имя этой конфигурации, которое будет видно в меню "Run and Debug"
            "name": "C++ (MinGW) Build and Debug Active File",
            
            // Тип отладчика. Для C/C++ используется "cppdbg".
            "type": "cppdbg",
            
            // Тип запроса: "launch" для запуска программы.
            "request": "launch",
            
            // Путь к исполняемому файлу вашей программы после компиляции.
            // ${fileDirname} - это папка, где находится текущий открытый файл C++.
            // ${fileBasenameNoExtension} - это имя текущего файла без расширения (например, "smth" для smth.cpp).
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            
            // Аргументы командной строки, передаваемые вашей программе при запуске.
            "args": [],
            
            // Остановить отладчик на точке входа (начале функции main).
            "stopAtEntry": false,
            
            // Рабочая директория, в которой будет запущена программа.
            "cwd": "${fileDirname}",
            
            // Переменные среды для процесса отладки.
            "environment": [],
            
            // Использовать ли внешнюю консоль (отдельное окно) для ввода/вывода.
            // False - использовать встроенный терминал VS Code.
            "externalConsole": false,
            
            // Режим интерфейса отладчика: "gdb" для MinGW-w64 (GNU Debugger).
            "MIMode": "gdb",
            
            // *** ОЧЕНЬ ВАЖНО: Путь к исполняемому файлу отладчика GDB (gdb.exe). ***
            // Убедитесь, что этот путь ТОЧНО соответствует вашей установке MSYS2.
            // Используйте двойные обратные слеши "\\" или одинарные прямые "/".
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe", // <-- ИЛИ C:\\msys64\\ucrt64\\bin\\gdb.exe если ваш gdb находится там!
            
            // Команды, которые GDB выполняет при запуске для улучшения отладки.
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            
            // Задача, которая будет выполнена перед запуском отладки.
            // Это ссылка на задачу сборки, определенную в tasks.json.
            "preLaunchTask": "C/C++: g++.exe build active file"
        }
    ]
}