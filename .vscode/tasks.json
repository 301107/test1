{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file", // Убедитесь, что label тоже g++.exe
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe", // <-- ВОТ ЭТА СТРОКА САМАЯ ВАЖНАЯ!
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача, сгенерированная отладчиком."
        }
    ]
}